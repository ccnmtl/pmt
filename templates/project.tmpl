<h2>outstanding items:</h2>

<table cellpadding="0" cellspacing="0" class="itemlisting">
<tmpl_loop name="milestones">
<tmpl_if name="items">
	<tr>
		<th colspan="9" class="milestone">MILESTONE: <a href="milestone.pl?mid=<tmpl_var name="mid">"><tmpl_var name="name" escape="html"></a></th>
	</tr>


	<tr>
		<th colspan="9" class="milestoneinfo">
		Status: <tmpl_var name="status"> |
		Target: <tmpl_var name="target_date"> | 
		Remaining: <tmpl_var name="total_estimated_time"> | 
		Completed: <tmpl_var name="total_completed_time">
		</th>
	</tr>

	<tr>
		<th class="firstcell">&#160;</th>
		<th><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=item">item</a>:</th>
		<th><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=priority">priority</a>:</th>
		<th><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=status">status</a>:</th>
		<th><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=target_date"><nobr>target date</nobr></a>:</th>
		<th><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=owner">owner</a>:</th>
		<th><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=assigned_to"><nobr>assigned to</nobr></a>:</th>
		<th nowrap="nowrap"><a href="project.pl?pid=<tmpl_var name="pid">&amp;sortby=last_mod">last modified</a>:</th>
		<th>&#160;</th>
	</tr>

<tmpl_loop name="items">
	<tr>
		<td class="firstcell"><tmpl_if name="has_dependencies">D<tmpl_else>&#160;</tmpl_if></td>
		<td><img src="images/tinybug.gif" alt="" width="14" height="14" class="<tmpl_var name="type_class" escape="html">" /><a href="item.pl?iid=<tmpl_var name="iid">">#<tmpl_var name="iid"> <tmpl_var name="title"></a></td>
		<td class="pr<tmpl_var name="priority">"><tmpl_var
                name="priority_label"></td>
		<td class="<tmpl_var name="status">"><tmpl_if name="r_status"><tmpl_var
                name="r_status"><tmpl_else><tmpl_var name="status"></tmpl_if>
		</td>
		<td nowrap="nowrap"><tmpl_var name="target_date"></td>
		<td><a href="user.pl?username=<tmpl_var
                name="owner">"><tmpl_var name="owner_fullname"
                escape="html"></a></td>
		<td><a href="user.pl?username=<tmpl_var
                name="assigned_to">"><tmpl_var name="assigned_to_fullname"
                escape="html"></a></td>
		<td nowrap="nowrap"><tmpl_var name="last_mod"></td>
		<td><tmpl_if name="notify">
		<img src="images/email.gif" alt="" width="14" height="11" alt="E-mail notification" />
		<tmpl_else>
		<img src="images/noemail.gif" alt="" width="14" height="11" alt="No E-mail notification" />
		</tmpl_if>
		</td>
	</tr>
</tmpl_loop>

